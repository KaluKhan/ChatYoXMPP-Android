<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             android:layout_width="match_parent"
                                             android:layout_height="wrap_content"
                                             android:padding="5dp">


    <LinearLayout
            app:layout_constraintEnd_toEndOf="parent"
            android:visibility="visible"
            android:id="@+id/frommelayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_margin="10dp"
            android:background="@drawable/shape_chat_bg"
            android:orientation="vertical">
        <TextView
                android:id="@+id/txtNameMe"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/app_name"
                android:textColor="@android:color/white"
                android:textSize="14sp"/>
        <TextView
                android:id="@+id/message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:autoLink="all"
                android:maxLines="1"
                android:text="@string/app_name"
                android:textColor="@android:color/black"
                android:textSize="17sp"/>

        <TextView
                android:id="@+id/date_"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:text="@string/app_name"
                android:textColor="@android:color/white"
                android:textSize="12sp"/>
    </LinearLayout>


    <LinearLayout
            android:background="@drawable/shape_chat_bg_other"
            android:visibility="gone"
            android:id="@+id/fromotherlayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_margin="10dp"
            android:orientation="vertical">
        <TextView
                android:id="@+id/txtNameOther"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/app_name"
                android:textColor="@android:color/white"
                android:textSize="14sp"/>
        <TextView
                android:id="@+id/message_other"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:autoLink="all"
                android:text="@string/app_name"
                android:textColor="@android:color/black"
                android:textSize="17sp"/>

        <TextView
                android:id="@+id/date_other"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3sp"
                android:text="@string/app_name"
                android:textColor="@android:color/white"
                android:textSize="12sp"/>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>
